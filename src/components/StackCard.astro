---
type Props = {
  text: string
  icon: string
  href: string
}

const { text, icon, href } = Astro.props
---

<a href={href} target="_blank" class="w-fit px-3 py-2 group border flex gap-2 items-center border-cyber-blue/50 hover:bg-cyber-blue/10 blend">
  <svg height={20} width={20} class="text-cyber-green">
    <use href={`/stack.svg#${icon}`}></use>
  </svg>
  <span class="text-sm capitalize text-cyber-green group-hover:text-cyber-pink blend">
    {text}
  </span>
</a>